/* 板块1 */

.db {
  width: 100%;
  box-sizing: border-box;
}

.db .header {
  width: 662rpx;
  position: relative;
  margin: 0 auto;
  border-radius: 16rpx;
  height: 423rpx;
}

.db .header .grade {
  width: 631rpx;
  position: absolute;
  bottom: 76rpx;
  height: 120rpx;
  left: 16rpx;
  display: flex;
  z-index: 10;
}

.db .header .grade .center {
  width: 455rpx;
  padding-top: 32rpx;
}

.db .header .grade .center .disparity {
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  margin-top: 30rpx;
}

.db .header .grade .center text {
  text-align: center;
}

.db .header .grade .center .tiao {
  height: 8rpx;
  border-radius: 4rpx;
  border: 2rpx solid #ccc;
  width: 455rpx;
  overflow: hidden;
}

.db .header .grade .center .tiao view {
  width: 40%;
  background: linear-gradient(127deg, #fec115 0%, #fe970e 100%);
  height: 8rpx;
}

.db .header .grade image {
  width: 88rpx;
  height: 83rpx;
}

.db .header .header_zxb {
  position: absolute;
  right: 40rpx;
  top: 64rpx;
  z-index: 10;
  width: 136rpx;
  height: 122rpx;
}

.db .header .header_zxb .price {
  width: 100%;
  display: flex;
  height: 31rpx;
  margin-top: 20rpx;
}

.db .header .header_zxb .price .balance {
  font-size: 20rpx;
  color: #fff;
  line-height: 46rpx;
}

.db .header .header_zxb .price text {
  font-size: 40rpx;
  color: #fff;
}

.db .header .header_zxb image {
  width: 90rpx;
  height: 86rpx;
  margin: 0 auto;
}

.db .header .header_tx {
  position: absolute;
  z-index: 10;
  top: 60rpx;
  left: 18rpx;
  width: 290rpx;
  height: 105rpx;
  display: flex;
}

.db .header .header_tx .header_name {
  flex: 1;
}

.db .header .header_tx .header_name text {
  font-size: 20rpx;
  margin-top: 14rpx;
  color: #fff;
}

.db .header .header_tx .header_name .name {
  display: flex;
  width: 100%;
}

.db .header .header_tx .header_name .name .name_left {
  font-size: 32rpx;
  color: #fff;
}

.db .header .header_tx .header_name .name .name_right {
  width: 51rpx;
  height: 26rpx;
  background-color: #fff;
  color: #000;
  font-size: 20rpx;
  text-align: center;
  line-height: 26rpx;
  margin-top: 10rpx;
  border-radius: 5rpx;
}

.db .header .header_tx image {
  height: 105rpx;
  width: 104rpx;
  margin-right: 36rpx;
}

.db .header .header_img {
  position: absolute;
  top: 0;
  left: 50%;
  width: 738rpx;
  height: 423rpx;
  transform: translateX(-50%);
}

/* 板块2 */

.db .income {
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}

.db .income image {
  width: 42rpx;
  height: 45rpx;
}

.db .income text {
  font-size: 30rpx;
  line-height: 45rpx;
}

/*板块3*/

.db .item {
  width: 92%;
  margin: 0 auto;
}

.db .item .item_list {
  display: flex;
  margin-bottom: 56rpx;
}

.db .item .item_list .item_list_right {
  flex: 1;
}

.db .item .item_list .item_list_right .item_list_top {
  display: flex;
  justify-content: space-between;
}
.db .item .item_list .item_list_right .item_list_top .blue{
  color: #3BA1D9;
}
.db .item .item_list .item_list_right .item_list_top text {
  font-size: 26rpx;
  color: rgba(41, 41, 41, 1);
}

.db .item .item_list .item_list_right .item_list_bottom {
  display: flex;
  justify-content: space-between;
  margin-top:14rpx;
}
.db .item .item_list .item_list_right .item_list_bottom text{
  font-size:22rpx;
  color:rgba(110,108,108,1);
}
.db .item .item_list image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 14rpx;
}
